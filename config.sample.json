{
  "claude": {
    "tool": "npm:@anthropic-ai/claude-code",
    "command": "claude",
    "mounts": [
      {
        "src": ".",
        "dst": "/workspace"
      },
      {
        "src": "~/.local/share/claude",
        "dst": "/root/.claude"
      },
      {
        "src": "~/.config/claude",
        "dst": "/root/.config/claude"
      }
    ],
    "env_passthrough": [
      "TERM",
      "ANTHROPIC_API_KEY"
    ],
    "allowed_hosts": [
      "api.anthropic.com",
      "statsig.anthropic.com",
      "sentry.io"
    ],
    "workdir": "/workspace"
  },
  "typst": {
    "tool": "cargo:typst-cli",
    "mounts": [
      {
        "src": ".",
        "dst": "/workspace"
      },
      {
        "src": "~/.local/share/typst",
        "dst": "/root/.local/share/typst"
      }
    ],
    "env_passthrough": [
      "TERM"
    ],
    "env": {},
    "ports": [],
    "workdir": "/workspace",
    "network": "none"
  },
  "node": {
    "tool": "node@lts",
    "command": "node",
    "mounts": [
      {
        "src": ".",
        "dst": "/workspace"
      }
    ],
    "env_passthrough": [
      "TERM",
      "NODE_ENV"
    ],
    "env": {
      "NPM_CONFIG_PREFIX": "/root/.npm-global"
    },
    "ports": [
      "3000:3000"
    ],
    "workdir": "/workspace"
  },
  "eslint": {
    "tool": "npm:eslint",
    "command": "eslint",
    "isolated": true,
    "mounts": [
      {
        "src": ".",
        "dst": "/workspace"
      }
    ],
    "env_passthrough": [
      "TERM",
      "NODE_ENV"
    ],
    "env": {
      "NPM_CONFIG_PREFIX": "/root/.npm-global"
    },
    "workdir": "/workspace"
  },
  "python3": {
    "tool": "python@3",
    "command": "python3",
    "mounts": [
      {
        "src": ".",
        "dst": "/workspace"
      }
    ],
    "env_passthrough": [
      "TERM",
      "PYTHONDONTWRITEBYTECODE"
    ],
    "env": {},
    "ports": [],
    "workdir": "/workspace"
  },
  "rg": {
    "tool": "cargo:ripgrep",
    "command": "rg",
    "mounts": [
      {
        "src": ".",
        "dst": "/workspace",
        "opts": "ro"
      }
    ],
    "env_passthrough": [
      "TERM"
    ],
    "network": "none",
    "workdir": "/workspace"
  },
  "cargo": {
    "tool": "rust",
    "command": "cargo",
    "mounts": [
      {
        "src": ".",
        "dst": "/workspace"
      }
    ],
    "env_passthrough": [
      "TERM",
      "RUST_BACKTRACE",
      "RUST_LOG"
    ],
    "workdir": "/workspace"
  },
  "go": {
    "tool": "go",
    "command": "go",
    "mounts": [
      {
        "src": ".",
        "dst": "/workspace"
      }
    ],
    "env_passthrough": [
      "TERM",
      "GOPROXY",
      "GOPRIVATE"
    ],
    "env": {
      "GOPATH": "/root/go"
    },
    "workdir": "/workspace"
  }
}
